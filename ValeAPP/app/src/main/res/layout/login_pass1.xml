<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesionPass1">

    <TextView
        android:id="@+id/eligeImagen"
        android:layout_width="396dp"
        android:layout_height="60dp"
        android:contentDescription="@string/elige_tu_imagen_paso_1"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/elige_tu_imagen_paso_1"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="306dp"
        android:layout_height="304dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eligeImagen">

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Circulo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/imagen_de_un_c_rculo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circulo" />

            <ImageButton
                android:id="@+id/Estrella"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/imagen_de_una_estrella"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/estrella" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Cuadrado"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/imagen_de_un_cuadrado"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cuadrado" />

            <ImageButton
                android:id="@+id/Triangulo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/imagen_de_tri_ngulo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/triangulo" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="304dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circuloSeleccionado"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/c_rculo_seleccionado"
                android:src="@drawable/tick" />

            <ImageView
                android:id="@+id/estrellaSeleccionado"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/estrella_seleccionada"
                android:src="@drawable/tick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cuadradoSeleccionado"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/cuadrado_seleccionado"
                android:src="@drawable/tick" />

            <ImageView
                android:id="@+id/trianguloSeleccionado"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/tri_ngulo_seleccionado"
                android:src="@drawable/tick" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="488dp"
            android:contentDescription="@string/imagen_del_paso_1_marcada_paso_actual"
            app:srcCompat="@android:drawable/radiobutton_on_background" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="372dp"
            android:contentDescription="@string/imagen_del_paso_2_no_marcada"
            app:srcCompat="@android:drawable/radiobutton_off_background" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="80dp"
            android:contentDescription="@string/imagen_del_paso_3_no_marcada"
            app:srcCompat="@android:drawable/radiobutton_off_background" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="108dp"
            android:contentDescription="@string/imagen_del_paso_4_no_marcada"
            app:srcCompat="@android:drawable/radiobutton_off_background" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/imagen_del_paso_5_no_marcada"
            app:srcCompat="@android:drawable/radiobutton_off_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="164dp"
        android:layout_height="84dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/irPass2"
            android:layout_width="63dp"
            android:layout_height="49dp"
            android:background="#000000"
            android:contentDescription="@string/bot_n_para_ir_al_siguiente_paso"
            android:rotation="180"
            android:scaleType="fitCenter"
            android:scaleX="1"
            app:srcCompat="@drawable/abc_vector_test" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/texto_del_bot_n_para_ir_al_siguiente_paso"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/siguiente"
            android:textColor="#000"
            android:textSize="24sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>