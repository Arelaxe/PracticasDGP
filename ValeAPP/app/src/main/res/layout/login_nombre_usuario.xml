<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesionNombreUsuario">

    <TextView
        android:id="@+id/valeAPPLoginUsuario"
        android:layout_width="375dp"
        android:layout_height="301dp"
        android:contentDescription="Espera un momento"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="ESCRIBE TU NOMBRE DE USUARIO"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="327dp"
        android:layout_height="84dp"
        android:layout_marginTop="320dp"
        android:autofillHints=""
        android:contentDescription="ESCRIBE AQUÍ TU NOMBRE DE USUARIO"
        android:ems="10"
        android:hint="NOMBRE DE USUARIO"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/siguienteLoginNombreUsuario"
        android:layout_width="129dp"
        android:layout_height="72dp"
        android:text="SIGUIENTE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario"
        app:layout_constraintVertical_bias="0.321" />

</androidx.constraintlayout.widget.ConstraintLayout>